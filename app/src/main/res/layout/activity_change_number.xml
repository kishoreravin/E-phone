<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeNumber"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/CND_regnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="Register Number" />

        <Button
            android:id="@+id/scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Scan" />
        <Button
            android:id="@+id/CND_enter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Enter" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/CND_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/CND_num1_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />
            <EditText
                android:id="@+id/CND_num1_edit"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/CND_num1_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Edit"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/CND_num2_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
            <EditText
                android:id="@+id/CND_num2_edit"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/CND_num2_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Edit"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/CND_num3_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
            <EditText
                android:id="@+id/CND_num3_edit"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/CND_num3_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Edit"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/CND_num4_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
            <EditText
                android:id="@+id/CND_num4_edit"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/CND_num4_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Edit"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>